local LumosUI = {}
local validKey = "1234"  -- Default valid key

-- Check if the entered key is valid
function LumosUI:CheckKey(userKey)
    return userKey == validKey
end

-- Function to create a draggable window
function LumosUI:CreateWindow(title, size)
    local ScreenGui = Instance.new("ScreenGui")
    local Frame = Instance.new("Frame")
    local TitleBar = Instance.new("TextLabel")
    local MinimizeButton = Instance.new("TextButton")

    -- Window Properties
    ScreenGui.Name = "LumosUI_ScreenGui"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.Parent = game:GetService("CoreGui")

    Frame.Name = "MainFrame"
    Frame.Parent = ScreenGui
    Frame.Size = size or UDim2.new(0, 500, 0, 400)
    Frame.Position = UDim2.new(0.5, -250, 0.5, -200)
    Frame.BackgroundColor3 = Color3.fromRGB(24, 24, 24)
    Frame.BorderSizePixel = 0
    Frame.AnchorPoint = Vector2.new(0.5, 0.5)

    TitleBar.Name = "TitleBar"
    TitleBar.Parent = Frame
    TitleBar.Text = title or "LumosUI Window"
    TitleBar.Size = UDim2.new(1, 0, 0, 40)
    TitleBar.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    TitleBar.TextColor3 = Color3.fromRGB(200, 200, 200)
    TitleBar.Font = Enum.Font.GothamBold
    TitleBar.TextSize = 18
    TitleBar.TextXAlignment = Enum.TextXAlignment.Center

    MinimizeButton.Name = "MinimizeButton"
    MinimizeButton.Parent = Frame
    MinimizeButton.Text = "_"
    MinimizeButton.Size = UDim2.new(0, 30, 0, 30)
    MinimizeButton.Position = UDim2.new(1, -35, 0, 5)
    MinimizeButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    MinimizeButton.Font = Enum.Font.GothamBold
    MinimizeButton.TextSize = 16

    -- Make the window draggable
    local dragging = false
    local dragStart, startPos

    TitleBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = Frame.Position
        end
    end)

    TitleBar.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)

    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            Frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    -- Minimize Button functionality
    local isMinimized = false
    MinimizeButton.MouseButton1Click:Connect(function()
        if not isMinimized then
            Frame:TweenSize(UDim2.new(0, 400, 0, 40), "Out", "Quad", 0.2, true)
            MinimizeButton.Text = "+"
            isMinimized = true
        else
            Frame:TweenSize(UDim2.new(0, 400, 0, 200), "Out", "Quad", 0.2, true)
            MinimizeButton.Text = "_"
            isMinimized = false
        end
    end)

    return ScreenGui
end

-- Function to create a button within the window
function LumosUI:CreateButton(parent, text, callback)
    local button = Instance.new("TextButton")
    button.Parent = parent
    button.Size = UDim2.new(0, 150, 0, 40)
    button.Text = text
    button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.Gotham
    button.TextSize = 16
    button.Position = UDim2.new(0.5, -75, 0.5, 0)

    button.MouseButton1Click:Connect(callback)
    return button
end

-- Function to create a text box
function LumosUI:CreateTextBox(parent, placeholder, callback)
    local textBox = Instance.new("TextBox")
    textBox.Parent = parent
    textBox.Size = UDim2.new(0, 250, 0, 40)
    textBox.PlaceholderText = placeholder
    textBox.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    textBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    textBox.Font = Enum.Font.Gotham
    textBox.TextSize = 16
    textBox.Position = UDim2.new(0.5, -125, 0.4, 0)
    textBox.ClearTextOnFocus = true

    textBox.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            callback(textBox.Text)
        end
    end)

    return textBox
end

-- Function to create a slider
function LumosUI:CreateSlider(parent, min, max, callback)
    local slider = Instance.new("Frame")
    slider.Parent = parent
    slider.Size = UDim2.new(0, 250, 0, 40)
    slider.BackgroundColor3 = Color3.fromRGB(45, 45, 45)

    local sliderButton = Instance.new("TextButton")
    sliderButton.Parent = slider
    sliderButton.Size = UDim2.new(0, 10, 1, 0)
    sliderButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)

    local function updateSlider(value)
        local clampedValue = math.clamp(value, min, max)
        sliderButton.Position = UDim2.new((clampedValue - min) / (max - min), 0, 0, 0)
        callback(clampedValue)
    end

    slider.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            local function onMove(input)
                local newX = math.clamp(input.Position.X - slider.AbsolutePosition.X, 0, slider.AbsoluteSize.X)
                local value = (newX / slider.AbsoluteSize.X) * (max - min) + min
                updateSlider(value)
            end
            game:GetService("UserInputService").InputChanged:Connect(onMove)

            input.InputEnded:Connect(function()
                game:GetService("UserInputService").InputChanged:Disconnect(onMove)
            end)
        end
    end)

    return slider
end

return LumosUI
